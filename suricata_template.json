{
  "index_patterns": ["netguard-suricata-*"],
  "template": {
    "settings": {
      "number_of_shards": 1
    },
    "mappings": {
      "properties": {
        "@timestamp": { "type": "date" },
        "src_ip": { "type": "ip" },
        "dest_ip": { "type": "ip" },
        "proto": { "type": "keyword" },
        "event_type": { "type": "keyword" }
      }
    }
  }
}
